class Solution {
public:
    int areaOfMaxDiagonal(vector<vector<int>>& dimensions) {

        int ans=INT_MIN;

        double dia=0;

        for(auto d:dimensions){
            double distance = sqrt(d[0]*1.0*d[0] + d[1]*1.0*d[1]);
if (distance == dia) {
    dia = distance;
    ans = max(ans, d[0] * d[1]);
}else if (distance > dia) {
    dia = distance;
    ans = d[0] * d[1];
}
        }

        return ans;
        
    }
};
