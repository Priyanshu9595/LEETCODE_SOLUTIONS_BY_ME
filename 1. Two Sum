class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {

        //BRUTE FORCE

        int n=nums.size();

        for(int i=0;i<n-1;i++){
            for(int j=i+1;j<n;j++){
                if(nums[i]+nums[j]==target)return {i,j};
            }
        }

        //OPTIMAL CODE

        map<int,int>mp;
        for(int i=0;i<n;i++){
            if(mp.find(target-nums[i])!=mp.end()){
                return {mp[target-nums[i]],i};
            }
            mp[nums[i]]=i;
        }

        return {};
        
    }
};
