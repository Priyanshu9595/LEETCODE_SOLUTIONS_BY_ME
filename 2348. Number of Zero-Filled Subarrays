class Solution {
public:
    long long zeroFilledSubarray(vector<int>& nums) {

        int n=nums.size();

       long long ans=0;

        for(int i=0;i<n;){
            int c=0;
            if(nums[i]==0){
                while(i<n && nums[i]==0){
                    i++;
                    c++;
                }

                ans+=(c*1LL*(c+1))/2;
            }else{
                i++;
            }
        }

        return ans;
        
    }
};
