class Solution {
public:
    int maxProfit(vector<int>& prices) {

        int ans=0;
        int n=prices.size();
        int mini=INT_MAX;
        int maxi=INT_MIN;

        for(int i=0;i<n;i++){
            if(mini>prices[i]){
                mini=prices[i];
                maxi=INT_MIN;
            }

            maxi=max(maxi,prices[i]);

            ans=max(ans,maxi-mini);
        }
        return ans;
    }
};
