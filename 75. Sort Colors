class Solution {
public:
    void sortColors(vector<int>& nums) {

        int n=nums.size();

        int i=0;
        int j=n-1;
        int s=0;

        while(s<=j){
            if(nums[s]==1){
                s++;
            }else if(nums[s]==0){
                swap(nums[s],nums[i]);
                i++;
                s++;
            }else{
                swap(nums[s],nums[j]);
                j--;
            }
        }
        
    }
};
