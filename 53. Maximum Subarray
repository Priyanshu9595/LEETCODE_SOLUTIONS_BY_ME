class Solution {
public:
    int maxSubArray(vector<int>& nums) {


        int n=nums.size();

        bool ch=false;
        int ans=0;
        int sum=0;

        for(int i=0;i<n;i++){

            if(nums[i]>=0)ch=true;

            sum+=nums[i];
            if(sum<0)sum=0;
            ans=max(ans,sum);

        }

        if(ch)return ans;

        return *max_element(nums.begin(),nums.end());

        
        
    }
};
