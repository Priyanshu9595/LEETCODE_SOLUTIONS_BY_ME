class Solution {
public:
    void setZeroes(vector<vector<int>>& matrix) {

        int n=matrix.size();
        int m=matrix[0].size();

        vector<pair<int,int>>v;
        for(int i=0;i<n;i++){
            for(int j=0;j<m;j++){
                if(matrix[i][j]==0)v.push_back({i,j});
            }
        }

        for(auto x:v){
            int i=x.first;
            int j=x.second;

            for(int p=0;p<m;p++){
                matrix[i][p]=0;
            }
            for(int p=0;p<n;p++){
                matrix[p][j]=0;
            }
        }


        
    }
};
