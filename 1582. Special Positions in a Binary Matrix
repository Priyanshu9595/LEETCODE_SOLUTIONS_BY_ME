class Solution {
public:
    int numSpecial(vector<vector<int>>& mat) {

        int res=0;
        int n=mat.size();
        int m=mat[0].size();


        for(int i=0;i<n;i++){
            for(int j=0;j<m;j++){
                if(mat[i][j]==1){
                    bool ans=true;

                    for(int k=0;k<m;k++){
                        if((k!=j) && mat[i][k]==1)ans=false;
                    }

                    for(int k=0;k<n;k++){
                       if((k!=i) && mat[k][j]==1)ans=false;
                    }

                    if(ans)res++;
                }
            }


        }
        return res;
    }
};
